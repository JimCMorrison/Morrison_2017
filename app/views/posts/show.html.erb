<p id="notice"><%= notice %></p>
<div class="post-wrapper">
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <strong>Url:</strong>
        <%= @post.url %>
      </p>
    </div>
    <div class="col-md-4">
      <p>
        <strong>Date Published:</strong>
        <%= local_date(@post.post_date) %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <p>
        <strong>Content:</strong>
        <%= @post.content.html_safe %>
      </p>
    </div>
    <div class="col-md-4">
      <%= image_tag @post.title_image %>
    </div>
  </div>
  <% if current_user.try(:admin?) %>
    <div class="row">
      <div class="col-md-12">
        <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
        <%= link_to 'Destroy', @post, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>
