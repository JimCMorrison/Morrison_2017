<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="post-new-wrapper">
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :url %>
          <%= f.text_field :url %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class=".col-md-8">
        <div class="field">
          <%= f.label :content %>
          <%= f.cktext_area :content %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= link_to 'Back', posts_path, class: "btn btn-default" %>
      <%= f.submit 'Create Post', class: "btn btn-success" %>
    </div>
  </div>
<% end %>
